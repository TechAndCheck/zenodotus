<%= turbo_frame_tag "modal" do %>
  <% unless defined?(render_empty) && render_empty == true %>
  <div  data-controller="modal" class="w-screen h-screen absolute inset-0" data-action="keyup@document->modal#escClose">
    <div class="bg-black opacity-50 w-screen h-screen absolute inset-0" data-action="click->modal#close"></div>
    <div class="absolute inset-52 bg-white py-3 font-display border border-gray-100 rounded px-4">
      <button class="text-xl text-pink-200 float-right" data-action="click->modal#close"><i class="fas fa-window-close"></i></button>
      <br />
      <%= form_with url: "/media/add", class: "w-full max-w-sm", html: { data: { action: "ajax:success->modal#onPostSuccess" } } do |form| %>
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <%= form.label :url_to_archive, "URL To Archive:", class: "block text-gray-500 md:text-right mb-1 md:mb-0 pr-4" %>
          </div>
          <div class="md:w-2/3">
            <%= form.text_field :url_to_archive, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500" %>
          </div>
        </div>
        <div class="md:flex md:items-center">
          <div class="md:w-1/3"></div>
          <div class="md:w-2/3">
            <%= form.submit "Archive", class: "shadow bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-white py-2 px-4 rounded" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
