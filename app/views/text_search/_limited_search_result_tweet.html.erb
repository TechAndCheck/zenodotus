<div class="border rounded mb-5 flex flex-col md:flex-row p-6 md:h-48 md:w-auto text-sm">
  <div class="flex-none md:w-32 pl-5 border-t md:border-t-0  mt-5 md:mt-0">
    <div class="flex flex-col items-center text-center justify-center">
      <div class="font-medium title-font mt-1 text-gray-900 text-lg">
        @<%= result.handle %>
      </div>
      <p class="text-base">
        <%= result.display_name %>
      </p>
    </div>
  </div>
  <div class="overflow-hidden md:pl-5 mr-5 flex flex-col md:flex-row w-full text-left justify-around">
    <div class="flex flex-col flex-wrap justify-around">
      <div class="h-8">
        <div class="pl-2 pr-2 bg-gradient-to-r from-blue-600 to-blue-300 text-white rounded">Tweet</div>
      </div>
      <div class="h-8">
        Fact Check Rating: Three Pinocchios
      </div>
      <div class="h-8">
        <a href="#">Fact Check Link <i class="fas fa-external-link-square-alt"></i></a>
      </div>
    </div>
    <div class="flex flex-col flex-wrap justify-around">
      <div class="h-8">
        Retrieved at: right now
      </div>
      <div class="h-8">
        Media Review Rating: Manipulated
      </div>
      <div class="h-8">
        Rating Organization: The Washington Post
      </div>
      <div class="h-8">
        Fact Check Publish Date: <%= result.posted_at %>
      </div>
    </div>
    <div class="flex flex-col justify-between md:w-1/3">
      <div class="h-8">
        ClaimReview claim: This is a sample claim of some sort of thing, it may be long, so let's see how this goes.
      </div>
      <div class="h-8" title="<%= result.text %>" >
        MediaReview description: Here's a description of the media
      </div>
      <div class="h-8 text-right text-green-400">
        <a href="#">Details <i class="fas fa-arrow-right"></i></a>
      </div>
    </div>
  </div>
</div>
