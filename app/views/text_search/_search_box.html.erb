<div class="bg-white py-4 font-display border border-gray-100 rounded">
  <div class="mt-4 mx-1">
    <%= form_with url: text_search_submit_path, method: "get" do |form| %>
      <div class="md:flex md:items-center mb-6 md:w-1/2 m-auto">
        <div class="px-8 flex justify-between md:flex-shrink">
          Text search:
        </div>
        <div class="md:flex-grow">
          <%= form.text_field :query, class: "md:flex-grow bg-gray-200 appearance-none  rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-gray-100 focus:border-green-500"%>
        </div>
        <div class="ml-5 md:flex-shrink">
          <%= form.submit "Search", class: "shadow bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-white py-2 px-4 rounded" %>
        </div>
      </div>
    <% end %>
    <div id="loader" class="hidden w-full h-full fixed block top-0 left-0 bg-white opacity-75 z-50">
    <span class="text-green-500 opacity-75 top-1/2 my-0 mx-auto block relative w-0 h-0" style="top: 50%;">
      <i class="fas fa-circle-notch fa-spin fa-5x"></i>
      <div class="text-center mt-2">Searching...</div>
    </span>
    </div>
  </div>
</div>
