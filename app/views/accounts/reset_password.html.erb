<% @title_tag = "Reset password" %>

<div class="box box--sm box--miniform" data-controller="reset_password">
	<p>
		<%= t("password_reset.to_begin") %>
		<%= link_to t("password_reset.login"), "/users/sign_in" %>.
	</p>
	<%= form_with(
				url: send_password_reset_email_path,
				html: {
					class: "form form--vertical",
					data: { turbo: false }
				}) do |f| %>
		<%= f.email_field(
					:email,
					autofocus: true,
					autocomplete: "email",
					placeholder: t("password_reset.email_address"),
					class: "input input--email",
					autocapitalize: "off") %>
		<%= f.submit(
					t("password_reset.reset"),
					class: "btn btn--submit") %>
	<% end %>
</div>
