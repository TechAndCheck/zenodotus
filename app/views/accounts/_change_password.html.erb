<div class="account-page__box account-update-box" data-controller="change-password"> <div class="account-page__box--settings__header">
		<h3><%= t("account_admin.change_password.change_password") %></h3>
		<p>
			<%= t("account_admin.change_password.to_change_your_password") %>
				<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> <%= t("account_admin.change_password.characters_minimum") %>)</em>
				<% end %>
		</p>
	</div>
	<div class="account-page__box--settings__form">
		<%= form_with( url: change_password_path,
									html: {
										method: :post,
										class: "form form--vertical",
										data: {
											action: "change-password#resetPasswordInputs"
										}
									}) do |f| %>

			<div class="field">
				<%= f.password_field(
					:password,
					"data-change-password-target": "passwordInput",
					autofocus: true,
					autocomplete: "new-password",
					placeholder: t("account_admin.change_password.new_password"),
					class: "input input--email") %>
			</div>

			<div class="field">
				<%= f.password_field(
					:password_confirmation,
					"data-change-password-target": "passwordConfirmationInput",
					placeholder: t("account_admin.change_password.confirm_new_password"),
					autocomplete: "new-password",
					class: "input input--email") %>
			</div>

			<div class="actions">
				<%= f.submit t("account_admin.change_password.change_my_password"), class: "btn btn--submit" %>
			</div>
		<% end %>
	</div>
</div>
