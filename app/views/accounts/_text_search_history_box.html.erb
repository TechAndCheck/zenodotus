<div class="box--settings">
	<% records_date = searches.first.created_at.strftime("%-B %-d, %Y") %>
	<h2><%= records_date %></h2>
	<div style="display: grid; grid-template-columns: 1fr 2fr;">
		<% searches.each do |search| %>
			<div>
				<span class="text-search-history-box__time__value">
					<%= search.created_at.strftime("%-I:%M %p") %>
				</span>
			</div>
			<div style="text-align: start;">
				<%= link_to(search.query, media_vault_search_path(q: search.query)) %>
			</div>
		<% end %>
	</div>
</div>

