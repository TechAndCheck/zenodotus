<div class="account-page__box account-update-box" data-controller="change-email">
	<div class="account-page__box--settings__header">
		<h3>Change email</h3>
		<p>
			To change your email, fill out the form below.
		</p>
	</div>
	<div class="account-page__box--settings__form">
		<%= form_with(url: change_email_path,
									html: {
										method: :post,
										class: "form form--vertical",
										data: {
											action: "change-email#resetEmailInputs"
										}
									}) do |f| %>

			<div class="field">
				<%= f.text_field(
					:email,
					"data-change-email-target": "emailInput",
					autofocus: true,
					autocomplete: "new-email",
					autocapitalize: "off",
					placeholder: "New email",
					class: "input input--email") %>
			</div>

			<div class="field">
				<%= f.text_field(
					:email_confirmation,
					"data-change-email-target": "emailConfirmationInput",
					placeholder: "Confirm new email",
					autocomplete: "new-email",
					autocapitalize: "off",
					class: "input input--email") %>
			</div>

			<div class="actions">
				<%= f.submit "Change my password", class: "btn btn--submit" %>
			</div>
		<% end %>
	</div>
</div>
