<script>
// Send messsage to Chrome extension to save the token
// The ID of the extension we want to talk to.
const extensionId = 'gmonfeekmmpegokpfbgohfhkkkllejhe';

// Check if extension is installed
if (chrome && chrome.runtime) {
	console.log('Extension installed and enabled <%= @token %>');
  // Make a request:
  chrome.runtime.sendMessage(
    extensionId,
    {
    	purpose: 'saveToken',
      token: '<%= @token %>'
    }
  );
}
</script>
