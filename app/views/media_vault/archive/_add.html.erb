<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal" data-action="keyup@document->modal#escClose" tabindex="-1" aria-hidden="true" class="overflow-y-auto overflow-x-hidden fixed top-12 right-0 left-0 md:top-0 z-50 w-full md:inset-0 md:h-full justify-center items-center flex modal--add_media--view">
    <div class="relative p-4 w-full max-w-md h-full md:h-10 z-20">

      <div id="container" class="relative rounded-lg shadow overflow-hidden">
        <button type="button" data-action="click->modal#close" class="btn btn--naked btn--modal-close absolute top-3 right-2.5">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </button>

        <div class="modal--add_media--view--header pt-6 px-8">
          <%= t("dashboard.save_a_post") %>
        </div>

        <div class="pb-6 pt-2 px-6">
          <% if defined?(error) %>
            <%= render partial: "layouts/flashes/flash", locals: { flash_type: :error, message: error } %>
          <% end %>

          <%= form_with url: media_vault_archive_add_path, class: "form__field" do |f| %>
            <div class="search-box__form--text">
              <fieldset class="search-box__fieldset" data-media-vault--search-box-target="searchByTextFieldset" style="margin-right: 10%">
                <%= f.label :url_to_archive, t("dashboard.url_to_archive"), class: "search-box__form__label" %>
                <%= f.text_field :url_to_archive, class: "search-box__form__field", value: (@query if defined?(@query) && !@query.nil?), "data-media-vault--search-box-target": "searchByTextField" %>
                <%= f.submit t("dashboard.archive"), class: "search-box__form__submit btn btn--reversed-subtle" %>
              </fieldset>
              <div class="search-box__toggle-mode-message">
                <%= t("dashboard.archive_a_url_of_a_social_media") %>
              </div>
            </div>
          <% end %>

          <div id="loader" class="hidden absolute top-0 left-0 w-full h-full bg-white/90 z-50 flex justify-center items-center">
            <svg role="status" class="w-8 h-8 mr-2 text-gray-200 animate-spin dark:text-gray-600 fill-blue-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
              <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
            </svg>
          </div>

        </div>
      </div>
    </div>
    <div data-action="click->modal#close" class="absolute w-full h-full z-10 bg-gray-700/80"></div>
  </div>
<% end %>
