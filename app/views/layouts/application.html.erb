<!DOCTYPE html>
<html>
  <head>
    <title><%= make_title_tag_content(@title_tag) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/96ec0b6a71.js" crossorigin="anonymous"></script>
    <!-- /FontAwesome -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  </head>

  <body class="bg-gray-50 text-gray-800">
    <div class="flex flex-col min-h-screen">
      <%= render "layouts/#{@site}/header" %>
      <div class="grow flex relative shadow z-1">
        <div class="container mx-auto max-w-screen-xl px-2 sm:px-4">
          <%= render "layouts/flashes/turbo_flashes" %>
          <%= yield %>
        </div>
      </div>
      <%= render "layouts/#{@site}/footer" %>
    </div>
    <%= render "layouts/svg_library" %>
  </body>
</html>
