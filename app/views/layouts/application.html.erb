<!DOCTYPE html>
<html>
  <head>
    <title><%= make_title_tag_content(@title_tag) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/96ec0b6a71.js" crossorigin="anonymous"></script>
    <!-- /FontAwesome -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  </head>

  <body class="bg-gray-100 text-gray-800">
    <%= render "layouts/header" %>
    <div class="bg-white flex relative shadow z-1">
      <div class="grow flex flex-col mx-auto my-4 max-w-screen-xl">
        <%= render "layouts/flashes" %>
        <%= yield %>
      </div>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
