{
  "extends": "airbnb-base",
  "rules": {
    "semi": [2, "never"],
    "max-len": ["error", { "code": 150 }],
    "prefer-destructuring": ["error", {"array": false, "object": true}],
    "no-alert": [0, "never"],
    "class-methods-use-this": [0, "never"]
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
    "es2021": true,
    "browser": true
  }
}
